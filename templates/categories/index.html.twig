{% extends 'base.html.twig' %}

{% block title %}Gestion des chatons BDD{% endblock %}

{% block body %}
<div class="container">
    <h1>Gestion des chatons BDD</h1>
    <table class="table table-striped">
        <tr>
            <th>Titre</th>
            <th>Description</th>
            <th></th>
        </tr>
        {% for c in categories %}
            <tr>
            <td><a href="{{ path("chatons_view",{"idCategorie": c.id}) }}" class="text-secondary">{{ c.titre }}</a></td>
            <td>{{ c.description }}</td>
            <td>
                <a href="{{ path("categorie_modifier",{"id": c.id})}}" class="btn btn-primary">Modifier</a>
                <a href="{{ path("categorie_supprimer",{"id": c.id})}}" class="btn btn-danger">Supprimer</a>
            </td>
            </tr>
        {% endfor %}
    </table>

    <h2>Ajouter une cat√©gorie</h2>
    {{ form(formulaire) }}
</div>
{% endblock %}
